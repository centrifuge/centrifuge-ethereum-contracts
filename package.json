{
  "name": "centrifuge-ethereum-contracts",
  "version": "0.2.0",
  "scripts": {
    "lint:sol:fix": "solium -d contracts/ --fix",
    "test": "truffle test",
    "start-ganache": "ganache-cli --gasLimit 4712388 --networkId 99999 -p 8545 -m \"tumble gas embody bright agree pony smoke laptop index sight shallow hungry\"",
    "re-test": "nodemon --exec 'truffle test'",
    "migrate-local": "MIGRATE_ADDRESS=0xd77c534aed04d7ce34cd425073a033db4fbe6a9d truffle migrate && ./scripts/generateEnvFile.sh local-ganache"
  },
  "nodemonConfig": {
    "ignore": [
      "docs/*"
    ],
    "delay": "500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:sol:fix"
    }
  },
  "dependencies": {
    "openzeppelin-solidity": "1.11.0"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.23.0",
    "ethereumjs-util": "^5.2.0",
    "ganache-cli": "^6.1.8",
    "husky": "^1.0.0-rc.15",
    "nodemon": "1.18.3",
    "solium": "^1.1.8",
    "truffle": "^4.1.14",
    "web3": "1.0.0-beta.36"
  }
}
